@{
    ViewData["Title"] = "Create Orders";
    var soOrderId = ViewBag.SoOrderId;
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Create Sales Order</h5>
        </div>
        <div class="card-body">
            <form id="createSalesOrderForm">
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="salesOrderNumber" class="form-label">Sales Order Number</label>
                            <input type="text" class="form-control" id="salesOrderNumber" name="salesOrderNumber"
                                placeholder="Enter Sales Order Number" required>
                        </div>
                        <div class="mb-3">
                            <label for="customer" class="form-label">Customer</label>
                            <select class="form-select" id="customerId" name="customer" required>

                            </select>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label for="orderDate" class="form-label">Order Date</label>
                            <input type="date" class="form-control" id="orderDate" name="orderDate" required>
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label">Address</label>
                            <textarea class="form-control" id="address" name="address" rows="3"
                                placeholder="Enter address" required></textarea>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Item Details</h5>
        <button id="addItem" class="btn btn-success btn-sm">Add Item</button>
    </div>
    <div class="card-body">
        <table id="itemDetailsTable" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>Item Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
            <tfoot></tfoot>
            <tr>
                <th colspan="2" style="text-align:right">Total Items:</th>
                <th id="footer-total-items"></th>
                <th colspan="2" style="text-align:right">Total Items:</th>
                <th id="footer-total-amount"></th>
                <th></th>
            </tr>
            </tfoot>
        </table>
    </div>
</div>

<div class="d-flex justify-content-end">
    <button id="create-order"" class=" btn btn-primary me-2">Save</button>
    <a href="/SalesOrder" class="btn btn-secondary">Cancel</a>
</div>
</div>

@section Scripts {
    <script>
        var soOrderId = @soOrderId;
        console.log(soOrderId);
    </script>
    <script src="~/js/EditSalesOrder.js" asp-append-version="true"></script>
}
