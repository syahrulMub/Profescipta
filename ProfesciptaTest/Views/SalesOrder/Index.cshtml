@{
    ViewData["Title"] = "Sales Orders";
}
<div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="card-title mb-0">Sales Orders</h5>
</div>
<div class="card">
    <div class="card-body">
        <div class="row mb-3 align-items-center">
            <div class="col-md-6 d-flex align-items-center">
                <label for="keyword" class="form-label me-2" style="white-space: nowrap;">Keyword</label>
                <input type="text" id="keyword" class="form-control" placeholder="Search by Order No or Customer Name">
            </div>
            <div class="col-md-6 d-flex align-items-center">
                <label for="orderDate" class="form-label me-2" style="white-space: nowrap;">Order Date</label>
                <input type="date" id="orderDate" class="form-control">
            </div>
        </div>
        <div class="row justify-content-end">

            <div class="col-md-2 text-end">
                <button id="searchButton" class="btn btn-primary w-100">Search</button>
            </div>
        </div>
    </div>
</div>
<div class="container mt-4">
    <div class="mb-4">
        <button id="addNewData" class="btn btn-success btn-sm me-2"><i class="fa-solid fa-plus"></i> Add New
            Data</button>
        <button id="exportExcel" class="btn btn-primary btn-sm"><i class="fa-solid fa-file-excel"></i> Export to
            Excel</button>
    </div>
    <div class="card">
        <div class="card-body">
            <table id="salesOrderTable" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Sales Order</th>
                        <th>Order Date</th>
                        <th>Customer</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/SalesOrder.js" asp-append-version="true"></script>
}
